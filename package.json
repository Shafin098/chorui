{
  "name": "chorui",
  "version": "1.0.0",
  "description": "IDE for Pakhi programming language",
  "main": "main.js",
  "scripts": {
    "type-check": "npx tsc --noEmit",
    "pre-process": "npm run type-check && npx webpack",
    "start": "npm run pre-process && electron-forge start",
    "package": "npm run pre-process && electron-forge package",
    "make": "npm run pre-process && electron-forge make"
  },
  "author": "Shafin Ashraf",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "babel-loader": "^8.2.2",
    "electron": "^13.0.1",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "electron-squirrel-startup": "^1.0.0",
    "esbuild": "^0.12.5",
    "react": "17.0.2",
    "react-dom": "^17.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chorui"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
